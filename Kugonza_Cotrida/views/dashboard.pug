meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Vendors-Dashboard
link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css", rel="stylesheet")
link(rel="stylesheet", href="/css/dashboard.css")

.container
  .row.g-4
    // Left column with cards
    .col-md-6
      .sales-orders-card
        .stat
          span.amount UGX 50,000,000
          span.label Sales
        .divider
        .stat
          span.amount UGX 15,000,000
          span.label Orders
      .card-row-2.mt-4
        .equal-card
          h4(style="color: green;") UGX 42,000,000
          p In stock
        .equal-card
          h4(style="color: red;") 5
          p Out of stock

    // Right column with form
    .col-md-6
      #product-form
        h5.mb-3
          strong Add Product
        form(action='addProduct' method='post')
          input(type="text", placeholder="Product Name" name='productName' id='productname')
          input(type="text", placeholder="Category" name='category' id='category')
          input(type="number", placeholder="Price" name='price' id='price')
          input(type="number", placeholder="Quantity" name='quantity' id='quantity')
          .row
            .col
              input(type="text", placeholder="Color" name='color' id='color')
            .col
              input(type="url", placeholder="Upload Image" name='image' id='image')
          .row.mt-3
            .col
              button#save-btn(type="submit") SAVE
            .col
              button#clear-btn(type="reset") CLEAR

  // Full-width table below everything
  .product-table.mt-5
    table
      thead
        tr
          th ID
          th Product name
          th Category
          th Price
          th Quantity
      tbody
        if products && products.length
          each product, index in products
            tr
              td #{index + 1}
              td #{product.produceName}
              td #{product.category}
              td #{product.price}
              td #{product.quantity}
script(src="/js/productsvalidation.js")
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js")
