meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Vendors-Dashboard
link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css", rel="stylesheet")
link(rel="stylesheet", href="/css/dashboard.css")
.d-flex.align-items-stretch.gap-4
  .w-50.d-flex.flex-column.justify-content-between
    .sales-orders-card
      .stat
        span.amount UGX 50,000,000
        span.label Sales
      .divider
      .stat
        span.amount UGX 15,000,000
        span.label Orders
    //  In stock and Out of stock as separate cards 
    .card-row-2
      .equal-card
        h4(style="color: green;") UGX 42,000,000
        p In stock
      .equal-card
        h4(style="color: red;") 5
        p Out of stock
  //  Right Column 
  .w-50
    #product-form.h-100
      h5.mb-3
        strong Add Product
      form
        input(type="text", placeholder="Product Name", required)
        input(type="text", placeholder="Category", required)
        input(type="number", placeholder="Price", required)
        input(type="text", placeholder="Quantity", required)
        .row
          .col
            input(type="text", placeholder="Color", required)
          .col
            input(type="url", placeholder="Upload Image", required)
        .row.mt-3
          .col
            button#save-btn(type="submit") SAVE
          .col
            button#clear-btn(type="reset") CLEAR
            
script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js")